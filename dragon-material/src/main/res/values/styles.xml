<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--  Region Text View  -->
  <style name="DmTextView">
    <item name="android:textColor">@color/dm_text_black_1</item>
    <item name="android:textSize">@dimen/dm_font_normal</item>
    <item name="android:fontFamily">@font/ubuntu_regular</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="DmTextViewBold">
    <item name="android:textColor">@color/dm_text_black_1</item>
    <item name="android:textSize">@dimen/dm_font_normal</item>
    <item name="android:fontFamily">@font/ubuntu_bold</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="DmTextViewItalic">
    <item name="android:textColor">@color/dm_text_black_1</item>
    <item name="android:textSize">@dimen/dm_font_normal</item>
    <item name="android:fontFamily">@font/ubuntu_italic</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="DmTextViewBoldItalic">
    <item name="android:textColor">@color/dm_text_black_1</item>
    <item name="android:textSize">@dimen/dm_font_normal</item>
    <item name="android:fontFamily">@font/ubuntu_bolditalic</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="DmTextView.Micro">
    <item name="android:textSize">@dimen/dm_font_micro</item>
  </style>

  <style name="DmTextView.Tiny">
    <item name="android:textSize">@dimen/dm_font_tiny</item>
  </style>

  <style name="DmTextView.Small">
    <item name="android:textSize">@dimen/dm_font_small</item>
  </style>

  <style name="DmTextView.Large">
    <item name="android:textSize">@dimen/dm_font_large</item>
  </style>

  <style name="DmTextView.ExtraLarge">
    <item name="android:textSize">@dimen/dm_font_xlarge</item>
  </style>

  <style name="DmTextViewBold.Small">
    <item name="android:textSize">@dimen/dm_font_small</item>
  </style>

  <style name="DmTextViewBold.Large">
    <item name="android:textSize">@dimen/dm_font_large</item>
  </style>

  <style name="DmTextViewBold.ExtraLarge">
    <item name="android:textSize">@dimen/dm_font_xlarge</item>
  </style>

  <!-- Region Button -->
  <style name="DmButton">
    <item name="android:textColor">@color/dm_text_black_2</item>
    <item name="android:textSize">@dimen/dm_font_small</item>
    <item name="android:fontFamily">@font/ubuntu_regular</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="DmButton.Primary" parent="DmButton">
    <item name="android:textColor">@color/dm_white</item>
    <item name="android:background">@drawable/dm_button_primary_bg</item>
  </style>

  <style name="DmButton.Secondary" parent="DmButton">
    <item name="android:textColor">@color/dm_primary</item>
    <item name="android:background">@drawable/dm_button_secondary_bg</item>
  </style>
</resources>