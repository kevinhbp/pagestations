<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/dm_dialog_default_bg"
  android:orientation="vertical"
  tools:layout_margin="@dimen/dm_spacing_xl">

  <TextView
    android:id="@+id/tv_title"
    style="@style/DmTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dm_spacing_l"
    android:paddingTop="@dimen/dm_spacing_l"
    tools:text="Dialog title\nwith second line" />

  <TextView
    android:id="@+id/tv_body"
    style="@style/DmTextView.Small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dm_spacing_s"
    android:ellipsize="end"
    android:maxLines="4"
    android:paddingHorizontal="@dimen/dm_spacing_l"
    android:paddingVertical="@dimen/dm_spacing_m"
    android:textColor="@color/dm_text_black_3"
    tools:text="Dialog body message\nwith second line\nand third line\nalso with fourth line." />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dm_spacing_m"
    android:orientation="horizontal">

    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/dm_spacing_l"
      android:layout_marginEnd="@dimen/dm_spacing_s"
      android:layout_marginBottom="@dimen/dm_spacing_m"
      android:layout_weight="1" />

    <View
      android:id="@+id/vw_spc"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:visibility="gone"
      android:layout_marginStart="@dimen/dm_spacing_l"
      android:layout_marginEnd="@dimen/dm_spacing_s"
      android:layout_marginBottom="@dimen/dm_spacing_m"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/btn_negative"
      style="@style/DmButton.Secondary"
      android:layout_width="0dp"
      android:layout_height="@dimen/dm_button_size_l"
      android:layout_marginEnd="@dimen/dm_spacing_s"
      android:layout_marginBottom="@dimen/dm_spacing_m"
      android:layout_weight="1"
      android:clickable="true"
      android:focusable="true"
      tools:text="Cancel" />

    <TextView
      android:id="@+id/btn_positive"
      style="@style/DmButton.Primary"
      android:layout_width="0dp"
      android:layout_height="@dimen/dm_button_size_l"
      android:layout_marginEnd="@dimen/dm_spacing_l"
      android:layout_marginBottom="@dimen/dm_spacing_m"
      android:clickable="true"
      android:focusable="true"
      android:layout_weight="1"
      tools:text="OK" />

  </LinearLayout>

</LinearLayout>