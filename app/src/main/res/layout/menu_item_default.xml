<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="menuItemViewModel"
      type="id.kputro.dragon.ui.menu.item.MenuItemViewModel" />
  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="@dimen/fo_size_menu_item"
      android:layout_margin="@dimen/fo_spacing_s"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="@dimen/fo_radius_small">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/iv_background"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:scaleType="centerCrop"
          app:setImage="@{menuItemViewModel.imageBackground}"
          tools:src="@drawable/bg_illustration_01" />

        <View
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.5" />

      </LinearLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/bs_spacing_xl">

        <View
          android:id="@+id/vw_anchor"
          android:layout_width="1dp"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/fo_spacing_l"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
          android:id="@+id/wp_message"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:orientation="vertical"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/vw_anchor">

          <TextView
            android:id="@+id/tv_title"
            style="@style/FoTextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{menuItemViewModel.textTitle}"
            android:textColor="@color/text_black_1"
            tools:text="Menu 1" />

          <TextView
            android:id="@+id/tv_subtitle"
            style="@style/FoTextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fo_spacing_s"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:paddingHorizontal="@dimen/fo_spacing_m"
            android:text="@{menuItemViewModel.textSubtitle}"
            android:textColor="@color/text_black_2"
            tools:text="Lorem ipsum dolor sit amet.\nLorem ipsum dolor sit amet.\nLorem ipsum dolor sit amet." />

        </LinearLayout>

        <androidx.cardview.widget.CardView
          android:id="@+id/wp_icon"
          android:layout_width="@dimen/fo_size_button_s"
          android:layout_height="@dimen/fo_size_button_s"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="@dimen/fo_size_img_logo_dashboard"
          app:cardElevation="0dp"
          app:cardPreventCornerOverlap="true"
          app:layout_constraintBottom_toTopOf="@+id/vw_anchor"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent">

          <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/fo_size_img_icon_menu"
            android:layout_height="@dimen/fo_size_img_icon_menu"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:setImage="@{menuItemViewModel.imageIcon}" />

        </androidx.cardview.widget.CardView>

      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

  </FrameLayout>
</layout>