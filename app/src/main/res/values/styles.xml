<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <!--  region Text View  -->
  <style name="FoTextView" parent="BsTextView" />

  <style name="FoTextViewBold" parent="BsTextViewBold" />

  <style name="FoTextViewItalic" parent="BsTextViewItalic" />

  <style name="FoTextViewBoldItalic" parent="BsTextViewBoldItalic" />

  <style name="FoTextView.Micro" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_micro</item>
  </style>

  <style name="FoTextView.Tiny" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_tiny</item>
  </style>

  <style name="FoTextView.Small" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_small</item>
  </style>

  <style name="FoTextView.Large" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_large</item>
  </style>

  <style name="FoTextView.ExtraLarge" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_xlarge</item>
  </style>

  <style name="FoTextView.Display" parent="FoTextView">
    <item name="android:textSize">@dimen/fo_font_display_normal</item>
  </style>

  <style name="FoTextViewBold.Small" parent="FoTextViewBold">
    <item name="android:textSize">@dimen/fo_font_small</item>
  </style>

  <style name="FoTextViewBold.Large" parent="FoTextViewBold">
    <item name="android:textSize">@dimen/fo_font_large</item>
  </style>

  <style name="FoTextViewBold.ExtraLarge" parent="FoTextViewBold">
    <item name="android:textSize">@dimen/fo_font_xlarge</item>
  </style>

  <style name="FoTextViewBold.Display" parent="FoTextViewBold">
    <item name="android:textSize">@dimen/fo_font_display_normal</item>
  </style>
  <!-- endregion -->

  <!-- region Progress Bar -->
  <style name="FoLoading" parent="Base.Widget.AppCompat.ProgressBar">
    <item name="android:layout_height">@dimen/fo_size_loading_main</item>
    <item name="android:layout_width">@dimen/fo_size_loading_main</item>
    <item name="android:indeterminate">true</item>
    <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/secondary_light</item>
  </style>
  <!-- endregion -->

</resources>